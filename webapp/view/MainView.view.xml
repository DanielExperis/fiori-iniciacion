<mvc:View controllerName="daniexamples.invoices.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Page id="page" title="{i18n>title}">
        <content>
            <Panel id="_Panel1" headerText="{i18n>selectionScreen}" expandable="false">
                <Label id="lblShipName" text="{i18n>shipName}" labelFor="txtShipName" class="sapUiSmallMarginBeginEnd"/>
                <Input id="txtShipName" value="{selectionScreen>/ShipName}" width="200px" class="sapUiSmallMarginEnd"/>
                <Label id="lblCountry" text="{i18n>country}" labelFor="txtCountry" class="sapUiSmallMarginBeginEnd"/>
                <Select id="selCountry" 
                        selectedKey="{selectionScreen>/CountryKey}" 
                        forceSelection="false" 
                        items="{selectionScreen>/Countries}"
                        class="sapUiSmallMarginEnd">
                    <items>
                        <core:Item id="_IDGenItem" key="{selectionScreen>key}" text="{selectionScreen>text}" />
                    </items>        
                </Select> 
                <Button id="btnFilter" text="{i18n>btnFilter}" icon="sap-icon://filter" press="onFilter" class="sapUiSmallMarginBeginEnd" />  
                <Button id="btnClearFilters" text="{i18n>btnClearFilters}" icon="sap-icon://clear-filter" press="onClearFilters" class="sapUiSmallMarginEnd" /> 
            </Panel>

            <Panel id="_IDGenPanel1">
                <List id="invoicesList" 
                      headerText="{i18n>invoicesHeaderList}" 
                      class="sapUiResponsiveMargin" 
                      width="auto" 
                      items="{/Invoices}">
                    <items>
                        <ObjectListItem id="_IDGenObjectListItem1" 
                                        title="{ShipName} - {Country}"
                                        number="{parts: [{path:'ExtendedPrice'},
                                                          {path:'selectionScreen>/Currency'}],
                                                 type:'sap.ui.model.type.Currency',
                                                 formatOptions:{
                                                    showMeasure: false
                                                 }}"
                                        numberUnit="{selectionScreen>/Currency}"
                                        numberState="{= ${ExtendedPrice} > 100 ? 'Success' : 'Warning'}">
                        </ObjectListItem>
                    </items>
                </List>
            </Panel>
        </content>
    </Page>

</mvc:View>
